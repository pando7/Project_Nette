<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Zadanie Nette</title>

	<link rel="stylesheet" href="{$basePath}/css/materialize.min.css">
	<link rel="stylesheet" href="{$basePath}/css/finalStyle.css">

	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
	<div class="sidebar close">
		<div class="logo-details">
			<i class='bx bx-menu' ></i>
			<span class="text"></span>
		</div>
		<ul class="nav-links">
			<li>
				<a href="#">
					<i class='bx bx-grid-alt' ></i>
					<span class="link_name">Dashboard</span>
				</a>
				<ul class="sub-menu blank">
					<li><a class="link_name" href="#">Dashboard</a></li>
				</ul>
			</li>
			<li>
				<div class="iocn-link">
					<a href="#">
						<i class='bx bx-user' ></i>
						<span class="link_name">Uživatelé</span>
					</a>
					<ul class="sub-menu blank">
						<li><a class="link_name" href="#">Uživatelé</a></li>
					</ul>
				</div>
			</li>
			<li>
				<div class="iocn-link">
					<a href="#">
						<i class='bx bx-notification' ></i>
						<span class="link_name">Notifikace</span>
					</a>
					<ul class="sub-menu blank">
						<li><a class="link_name" href="#">Notifikace</a></li>
					</ul>
				</div>
			</li>
			<li>
				<a href="#">
					<i class='bx bx-purchase-tag-alt' ></i>
					<span class="link_name">Značky</span>
				</a>
				<ul class="sub-menu blank">
					<li><a class="link_name" href="#">Značky</a></li>
				</ul>
			</li>
		</ul>
	</div>
	<section class="home-section">

		<nav class="primary-navbar">
			<div class="nav-wrapper">
				<a href="#" class="brand-logo">SRP</a>
				<ul id="nav-mobile" class="right hide-on-med-and-down">
					<li><a href="sass.html">Odhlásiť(admin)</a></li>
				</ul>
			</div>
		</nav>

		<nav class="secondary-navbar">
			<div class="nav-wrapper">
				<a href="#!" class="brand-logo"><span class="material-symbols-outlined">arrow_back</span> Značky</a>
			</div>
		</nav>


		<div class="content-section">
			<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

			{include content}
		</div>

	</section>
	<script>
		let arrow = document.querySelectorAll(".arrow");
		for (var i = 0; i < arrow.length; i++) {
			arrow[i].addEventListener("click", (e)=>{
				let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
				arrowParent.classList.toggle("showMenu");
			});
		}
		let sidebar = document.querySelector(".sidebar");
		let sidebarBtn = document.querySelector(".bx-menu");
		console.log(sidebarBtn);
		sidebarBtn.addEventListener("click", ()=>{
			sidebar.classList.toggle("close");
		});
	</script>


	{block scripts}
	<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
		<script src="{$basePath}/js/materialize.min.js"></script>


	{/block}
</body>
</html>
